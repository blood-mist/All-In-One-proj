<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/stb_bg"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="#80ffffff"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/org_launcher_logo"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_gravity="top"
            android:adjustViewBounds="true"
            android:contentDescription="@string/storeLogo"
            android:scaleType="fitXY"
            android:src="@drawable/store_logo" />

        <ListView
            android:id="@+id/lst_basic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:listSelector="#c0f0f0f0" />


    </RelativeLayout>
    <View
        android:layout_width="3dip"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="top"
            android:layout_weight="3"
            android:background="#80ffffff"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_connectivity"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:padding="10dp"
                android:layout_margin="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/lan_disconnected" />


            <LinearLayout
                android:id="@+id/layout_left_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txt_username"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text="Hello"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@drawable/text_selector" />
                    <TextClock
                        android:id="@+id/txt_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11:30"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@drawable/text_selector" />

                    <TextView
                        android:id="@+id/txt_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="wed 24/01/2018"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@drawable/text_selector" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/user_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:adjustViewBounds="true"
                        android:padding="5dp"
                        android:scaleType="fitXY"
                        android:visibility="gone"
                        android:src="@drawable/userimage" />

                    <ImageButton
                        android:id="@+id/img_logout"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:adjustViewBounds="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:nextFocusDown="@id/app_recycler_list"
                        android:padding="5dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/logout" />

                </LinearLayout>





            </LinearLayout>

            <LinearLayout

                android:id="@+id/receiver_layout"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_toLeftOf="@+id/layout_left_top"
                android:layout_marginRight="40dp"
                android:background="@color/transparent_black"
                android:layout_centerInParent="true"
                android:gravity="right"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txt_mediaTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:text="@string/fm"
                    android:textColor="@color/transparent_grey" />

                <TextView
                    android:id="@+id/txt_currentMedia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ellipsize="marquee"
                    android:focusable="false"
                    android:gravity="center"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="Currently Playing"
                    android:textColor="@color/transparent_grey" />

                <ImageButton
                    android:id="@+id/btn_pause"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/img_selector"
                    android:nextFocusDown="@id/app_recycler_list"
                    android:padding="5dp"
                    android:src="@drawable/ic_play_arrow_black_24dp"
                    android:tint="@color/white_color" />

            </LinearLayout>

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/app_recycler_list"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_gravity="center"
            android:layout_weight="10"
            android:foregroundGravity="center"
            android:orientation="horizontal"
            android:nextFocusRight="@id/app_recycler_list"
            android:padding="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#80ffffff"
            android:orientation="horizontal">





            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:text="Box ID:  "
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/white_color" />

            <TextView
                android:id="@+id/txt_boxId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="XXXXXXXXXXX"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/white_color" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal"
        android:visibility="gone">


        <ss.com.bannerslider.views.BannerSlider
            android:id="@+id/banner_slider1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:descendantFocusability="blocksDescendants"
            android:focusable="false"
            android:importantForAccessibility="noHideDescendants"
            android:padding="10dp"
            android:visibility="gone"
            app:emptyView="@layout/empty_layout"
            app:indicatorSize="0dp"
            app:interval="5000"
            app:loopSlides="true" />
    </LinearLayout>

</LinearLayout>




