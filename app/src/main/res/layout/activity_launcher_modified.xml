<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_3"
    android:orientation="vertical"
    android:weightSum="7"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="top"
        android:layout_weight="1">


        <ImageButton
            android:id="@+id/img_logout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:adjustViewBounds="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:nextFocusDown="@id/app_recycler_list"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/logout" />

        <TextView
            android:id="@+id/txt_username"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/img_logout"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@+id/img_logout"
            android:layout_toStartOf="@+id/img_logout"
            android:ellipsize="marquee"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:nextFocusDown="@id/app_recycler_list"
            android:singleLine="true"
            android:text="Hello"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@drawable/text_selector" />

        <ImageView
            android:id="@+id/user_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@+id/txt_username"
            android:layout_toStartOf="@+id/txt_username"
            android:adjustViewBounds="true"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/userimage" />

        <LinearLayout
            android:id="@+id/receiver_layout"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="end"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@+id/user_image"
            android:layout_toStartOf="@+id/user_image"
            android:background="@color/transparent_black"
            android:gravity="right"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/txt_mediaTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:text="@string/fm"
                android:textColor="@color/transparent_grey" />

            <TextView
                android:id="@+id/txt_currentMedia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="marquee"
                android:focusable="false"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:padding="5dp"
                android:singleLine="true"
                android:text="Currently Playing"
                android:textColor="@color/transparent_grey" />

            <ImageButton
                android:id="@+id/btn_pause"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/img_selector"
                android:nextFocusDown="@id/app_recycler_list"
                android:padding="5dp"
                android:src="@drawable/ic_play_arrow_black_24dp"
                android:tint="@color/white_color" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:weightSum="4">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/app_recycler_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:foregroundGravity="center"
            android:nextFocusRight="@id/app_recycler_list"
            android:padding="10dp" />

        <ss.com.bannerslider.views.BannerSlider
            android:id="@+id/banner_slider1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:descendantFocusability="blocksDescendants"
            android:focusable="false"
            android:importantForAccessibility="noHideDescendants"
            android:padding="10dp"
            app:emptyView="@layout/empty_layout"
            app:indicatorSize="0dp"
            app:interval="5000"
            app:loopSlides="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_connectivity"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/lan_disconnected" />

        <TextClock
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="11:30"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/transparent_grey" />

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="wed 24/01/2018"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/transparent_grey" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:text="Box ID:  "
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/transparent_grey" />

        <TextView
            android:id="@+id/txt_boxId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="XXXXXXXXXXX"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/transparent_grey" />
    </LinearLayout>
</LinearLayout>