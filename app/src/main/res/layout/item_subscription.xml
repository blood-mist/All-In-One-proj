<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:layout_gravity="center"
    android:background="@color/transparent_grey"
    android:focusable="true"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="4dp">

    <TextView
        android:id="@+id/txt_subs_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:padding="5dp"
        android:maxLines="1"
        android:text="Subscription 1"
        android:textAllCaps="true"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/white_color"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white_color"
        android:padding="5dp" />

    <TextView
        android:id="@+id/txt_subs_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="start"
        android:textAlignment="textStart"
        android:text="Subscription Id: 1"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/white_color" />

    <TextView
        android:id="@+id/txt_subs_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:textAlignment="textStart"
        android:padding="5dp"
        android:maxLines="1"
        android:text="Subscription Type:Channel"
        android:textColor="@color/white_color" />

    <TextView
        android:id="@+id/txt_subs_expiry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:textAlignment="textStart"
        android:padding="5dp"
        android:maxLines="1"
        android:text="Expiry at: 02/02/2017"
        android:textColor="@color/white_color" />
    <TextView
        android:id="@+id/txt_subs_updated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:maxLines="1"
        android:textAlignment="textStart"
        android:padding="5dp"
        android:text="Subscribed at: 02/02/2017"
        android:textColor="@color/white_color" />
</LinearLayout>
