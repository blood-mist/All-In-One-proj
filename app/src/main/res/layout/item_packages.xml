
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/app_selector"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_gravity="center"
        android:padding="5dp"
        android:id="@+id/layout_package">
        <TextView
            android:id="@+id/txt_package_name"
            android:layout_width="match_parent"
            android:gravity="center"
            android:ellipsize="marquee"
            android:padding="5dp"
            android:marqueeRepeatLimit="marquee_forever"
            android:textColor="@color/white_color"
            android:background="@color/color_smkblck"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="English Movies"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:singleLine="true" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:background="@color/white_color">
            <TextView
                android:id="@+id/txt_package_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/price"
                android:padding="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/transparent_black"/>
            <TextView
                android:id="@+id/txt_package_subscribed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/transparent_black"
                android:padding="5dp"
                android:text="Status:"/>
            <TextView
                android:id="@+id/txt_package_expiry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/transparent_black"
                android:text="@string/expiry_at"/>
        </LinearLayout>

    </LinearLayout>
