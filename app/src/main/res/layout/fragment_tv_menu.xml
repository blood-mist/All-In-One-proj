<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">


    <TextView
        android:id="@+id/txt_category_label"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:background="@color/transp_50_black"
        android:gravity="center"
        android:padding="10dp"
        android:focusable="false"
        android:importantForAccessibility="noHideDescendants"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/recycler_category_list"
        android:text="@string/categories"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/white_color"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_category_list"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_toEndOf="@+id/txt_category_label"
        android:background="@color/transp_50_black"
        android:importantForAccessibility="yes"
        android:nextFocusLeft="@id/recycler_channel_list"
        android:padding="10dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_channel_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:importantForAccessibility="yes"
        android:layout_alignEnd="@+id/txt_category_label"
        android:layout_below="@+id/recycler_category_list"
        android:background="@color/transp_50_black"
        android:nextFocusUp="@id/recycler_category_list"
        android:nextFocusRight="@id/txt_epg"
        android:padding="10dp" />

    <View
        android:id="@+id/default_view"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/recycler_category_list"
        android:layout_toEndOf="@+id/recycler_channel_list"
        android:background="@color/colorBlue"
        android:focusable="true"
        android:importantForAccessibility="yes"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/default_view"
        android:background="@color/transparent_black">

        <LinearLayout
            android:id="@+id/channel_list_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:importantForAccessibility="no"
                android:text="@string/txt_description"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/white_color"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_desc"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:padding="10dp"
                    android:focusable="false"
                    android:importantForAccessibility="no"
                    android:scaleType="fitXY"
                    android:src="@drawable/placeholder" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_channel_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:importantForAccessibility="no"
                        android:text="@string/description_demo"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/white_color" />

                    <TextView
                        android:id="@+id/description_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:importantForAccessibility="no"
                        android:padding="10dp"
                        android:text="Channel Category: "
                        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                    <TextView
                        android:id="@+id/txt_menu_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:importantForAccessibility="no"
                        android:padding="10dp"
                        android:text="$1.00"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:importantForAccessibility="yes"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/epg_icon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:adjustViewBounds="true"
                            android:focusable="false"
                            android:importantForAccessibility="no"
                            android:padding="5dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/epg" />

                        <TextView
                            android:id="@+id/txt_epg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:importantForAccessibility="yes"
                            android:nextFocusLeft="@id/recycler_channel_list"
                            android:nextFocusUp="@id/recycler_category_list"
                            android:padding="10dp"
                            android:text="EPG"
                            android:textAllCaps="true"
                            android:textColor="@drawable/text_selector" />

                        <ImageView
                            android:id="@+id/purchase_icon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="50dp"
                            android:adjustViewBounds="true"
                            android:focusable="false"
                            android:importantForAccessibility="no"
                            android:padding="5dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/purchase_status" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:importantForAccessibility="yes"
                            android:nextFocusUp="@id/recycler_category_list"
                            android:padding="10dp"
                            android:text="Free"
                            android:textAllCaps="true"
                            android:textColor="@drawable/text_selector" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>


