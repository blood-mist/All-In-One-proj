<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/img_user_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:focusable="false"
        android:scaleType="fitXY"
        android:src="@drawable/userimage"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/img_user_image"
        android:layout_alignRight="@+id/img_user_image"
        android:layout_above="@+id/img_user_image"
        android:padding="5dp"
        android:text="@string/user_name"
        android:layout_alignStart="@+id/img_user_image"
        android:layout_alignEnd="@+id/img_user_image" />
    <TextView
        android:id="@+id/txt_email_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_user_image"
        android:layout_centerVertical="true"
        android:text="@string/email"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:textColor="@color/white_color"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/img_user_image" />
    <TextView
        android:id="@+id/txt_userEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txt_email_label"
        android:layout_centerVertical="true"
        android:text="abc@abc.com"
        android:layout_alignLeft="@+id/txt_user_balance"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:padding="10dp"
        android:textColor="@color/white_color"
        android:layout_toEndOf="@+id/txt_email_label" />

    <TextView
        android:id="@+id/txt_mac_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_email_label"
        android:layout_alignStart="@+id/txt_email_label"
        android:layout_below="@+id/txt_email_label"
        android:padding="10dp"
        android:text="@string/mac"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/white_color" />
    <TextView
        android:id="@+id/txt_user_mac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txt_mac_label"
        android:text="XXXXXXXXXXXX"
        android:layout_alignTop="@+id/txt_mac_label"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:padding="10dp"
        android:textColor="@color/white_color"
        android:layout_toEndOf="@+id/txt_mac_label"
        android:layout_alignStart="@+id/txt_user_balance"
        android:layout_alignLeft="@+id/txt_user_balance" />
    <TextView
        android:id="@+id/txt_balance_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_email_label"
        android:layout_alignStart="@+id/txt_email_label"
        android:layout_below="@+id/txt_mac_label"
        android:padding="10dp"
        android:text="@string/balance"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/white_color" />
    <TextView
        android:id="@+id/txt_user_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txt_balance_label"
        android:text="XXXXXXXXXXXX"
        android:layout_alignTop="@+id/txt_balance_label"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginLeft="15dp"
        android:padding="10dp"
        android:textColor="@color/white_color"
        android:layout_toEndOf="@+id/txt_balance_label"
        android:layout_marginStart="10dp" />
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignRight="@+id/txt_user_balance"
        android:layout_above="@id/txt_email_label"
        android:layout_alignLeft="@+id/txt_balance_label"
        android:background="@color/transparent_30_black"
        android:layout_alignTop="@+id/img_user_image"
        android:layout_alignEnd="@+id/txt_user_balance"
        android:layout_alignStart="@+id/txt_balance_label" />
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignRight="@+id/txt_user_balance"
        android:layout_below="@+id/txt_balance_label"
        android:layout_alignLeft="@+id/txt_balance_label"
        android:background="@color/transparent_30_black"
        android:layout_alignEnd="@+id/txt_user_balance"
        android:layout_alignStart="@+id/txt_balance_label" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view2"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
